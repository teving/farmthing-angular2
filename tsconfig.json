{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "noEmit": true,
      "noEmitHelpers": true,
      "importHelpers": true,
      "lib": ["es2015", "dom"],
      "types": [
         "chai",
         "mocha",
         "node"
      ]
   },
   "buildOnSave": false,
   "compileOnSave": false,
   "exclude": [
      "node_modules"
   ]
}
